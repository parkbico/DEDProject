{{>layout/header2}}
<body id="page-top">
<div id="wrapper">
    {{>layout/sidebar}}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {{>layout/topbar}}
            <!-- Container Fluid-->
            <div class="container-fluid" id="container-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Form Basic -->
                        <div class="card mb-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">문의사항</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">제목</label>
                                    <input type="text" class="form-control" value="{{boardQna.title}}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="">카테고리</label>
                                    <input type="text" class="form-control" value="{{boardQna.category}}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="">등록자</label>
                                    <input type="text" class="form-control" value="{{boardQna.registerUser}}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="">등록일</label>
                                    <input type="text" class="form-control" value="{{boardQna.registerDate}}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="">문의내용</label>
                                    <textarea class="form-control" rows="3">{{boardQna.content}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="">답변상태</label>
                                    <input type="text" class="form-control" value="{{boardQna.status}}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="">답변내용작성</label>
                                    <textarea class="form-control" id="answerContent" rows="3"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary" id="btn-update">저장</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Row-->
            </div>
            <!---Container Fluid-->
        </div>
    </div>
</div>

{{>layout/footer2}}
<!-- Page level plugins -->
<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="/js/boardQna/boardQnaUpdate.js"></script>
<!-- Page level custom scripts -->
<script>
    $(document).ready(function () {
      $('#dataTable').DataTable(); // ID From dataTable
      $('#dataTableHover').DataTable({
         order: [[1, 'asc']]
      }); // ID From dataTable with Hover
      $('#dataTableHover2').DataTable(); // ID From dataTable with Hover
    });
  </script>

</body>

</html>